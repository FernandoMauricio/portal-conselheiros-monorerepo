{
  "name": "portal-conselheiros-monorepo",
  "version": "1.0.0",
  "description": "Monorepo para o Portal dos Conselheiros do Senac",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel --filter=!@senac/portal-mobile",
    "dev:all": "turbo run dev --parallel",
    "dev:mobile": "pnpm -C apps/mobile dev",
    "dev:mobile:android": "pnpm -C apps/mobile dev -- --android",
    "dev:web": "pnpm --filter ./apps/web dev",
    "dev:api": "pnpm --filter ./apps/api dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean"
  },
  "keywords": [
    "monorepo",
    "senac",
    "portal",
    "conselheiros",
    "react",
    "react-native",
    "node",
    "express",
    "prisma",
    "livekit"
  ],
  "author": "Fernando Mauricio",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^20.19.11",
    "pnpm": "^9.5.0",
    "turbo": "^2.0.4"
  },
  "packageManager": "pnpm@9.5.0",
  "resolutions": {
    "expo": "~53.0.22",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.6"
  }
}